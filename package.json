{
  "name": "balance-bot",
  "version": "1.0.0",
  "description": "Self-hosted notifier that delivers SimpleFIN balance updates via Apprise",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run format:check"
  },
  "keywords": [
    "simplefin",
    "apprise",
    "notifications",
    "finance",
    "self-hosted"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "dotenv": "^16.4.5",
    "lowdb": "^7.0.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "eslint": "^9.14.0",
    "prettier": "^3.3.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2024": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off"
    }
  },
  "eslintIgnore": [
    "apprise/",
    "data/"
  ]
}
