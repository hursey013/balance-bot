# SimpleFIN credentials
SIMPLEFIN_ACCESS_URL=https://beta-bridge.simplefin.org/access/<your-access-token>
SIMPLEFIN_ACCESS_SECRET=replace-with-secret-from-simplefin
# Optional: restrict polling to a single account ID returned by SimpleFIN
SIMPLEFIN_ACCOUNT_ID=

# Notification settings
# One or more Apprise URLs separated by commas or newlines (e.g. discord://, email://, etc.)
APPRISE_NOTIFICATION_URLS=discord://token/channel
# URL of the Apprise API service (the docker-compose file exposes it at this address)
APPRISE_API_URL=http://apprise:8000/notify

# Polling cadence using cron syntax (defaults to every 5 minutes)
POLL_CRON_EXPRESSION=*/5 * * * *
SUPPRESS_INITIAL_NOTIFICATION=true

# Location of the persistent state file
STATE_FILE_PATH=/app/data/state.json

# Optional timezone used when formatting timestamps
TZ=America/Chicago
