# SimpleFIN credentials (copy the full access link that includes user:pass@...)
SIMPLEFIN_ACCESS_URL=https://user:secret@beta-bridge.simplefin.org/access/<your-access-id>
SIMPLEFIN_TIMEOUT_MS=10000

# Polling cadence using cron syntax (defaults to every 5 minutes)
POLL_CRON_EXPRESSION=*/5 * * * *

# Notification routing
# JSON string or @file path describing who should receive which accounts
ACCOUNT_NOTIFICATION_TARGETS=[
#  {
#    "name": "Ellie",
#    "accountIds": ["acct-123"],
#    "appriseUrls": ["mailto://ellie@example.com"]
#  }
]
# Optional fallback: comma/newline list of URLs when targets are omitted
APPRISE_NOTIFICATION_URLS=

# Apprise client settings
APPRISE_API_URL=http://apprise:8000/notify
APPRISE_TIMEOUT_MS=10000

# Location of the persistent state file
STATE_FILE_PATH=/app/data/state.json