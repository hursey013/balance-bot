#!/bin/sh
set -e

if ! command -v npm >/dev/null 2>&1; then
  echo "npm is required to run project checks" >&2
  exit 1
fi

if [ ! -x node_modules/.bin/eslint ] || [ ! -x node_modules/.bin/prettier ]; then
  echo "Skipping lint and format checks because dev dependencies are not installed." >&2
  exit 0
fi

npm run validate
